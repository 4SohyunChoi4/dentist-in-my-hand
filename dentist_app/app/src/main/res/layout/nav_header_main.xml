<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom">

    <ImageView
            android:id="@+id/navImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/face"
            android:contentDescription="@string/nav_header_desc"
            app:layout_constraintTop_toTopOf="@id/navTextView"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
            android:id="@+id/navTextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40sp"
            android:layout_marginStart="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/navImageView"
            android:textColor="@color/defaultContextColor"
    />
    <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/navTextView"
            android:background="@android:color/transparent"
            android:layout_marginTop="15sp"
            app:layout_constraintStart_toEndOf="@+id/navImageView"
            android:textColor="@color/defaultContextColor"
            android:text="로그인"/>
    <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/loginBtn"
            app:layout_constraintStart_toEndOf="@+id/loginBtn"
            android:background="@android:color/transparent"
            android:textColor="@color/defaultContextColor"
            android:text="회원가입"/>

    <Button
            android:id="@+id/myBookBtn"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn"
            app:layout_constraintStart_toEndOf="@+id/loginBtn"
            app:layout_constraintEnd_toStartOf="@+id/joinBtn"
            android:background="@android:color/transparent"
            android:textColor="@color/defaultContextColor"
            android:text="나의 예약 내역 보기"/>




</androidx.constraintlayout.widget.ConstraintLayout>