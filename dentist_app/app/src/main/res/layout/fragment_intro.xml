<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:context=".intro.IntroFragment">

    <TextView
            android:id="@+id/text_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="숙명치과입니다"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"/>
    <Button
            android:textSize="20dp"
            android:stateListAnimator="@null"
            android:layout_height="80dp"
            android:layout_width="150dp"
            android:id="@+id/noticeBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/officehoursBtn"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:text="공지사항"/>

    <Button
            android:id="@+id/officehoursBtn"
            android:stateListAnimator="@null"
            android:textSize="20dp"
            android:layout_height="80dp"
            android:layout_width="150dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/noticeBtn"
            app:layout_constraintTop_toTopOf="@+id/noticeBtn"
            android:text="진료시간"/>

    <Button
            android:id="@+id/bookBtn"
            android:textSize="20dp"
            android:stateListAnimator="@null"
            android:layout_height="80dp"
            android:layout_width="150dp"
            app:layout_constraintLeft_toLeftOf="@id/noticeBtn"
            app:layout_constraintTop_toBottomOf="@+id/noticeBtn"
            android:text="예약관리"/>

    <Button
            android:id="@+id/askBtn"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_height="80dp"
            android:layout_width="150dp"
            app:layout_constraintLeft_toLeftOf="@id/officehoursBtn"
            app:layout_constraintTop_toBottomOf="@+id/officehoursBtn"
            android:text="1:1 문의"/>

</androidx.constraintlayout.widget.ConstraintLayout>